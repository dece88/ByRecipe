<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/forgot_password_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_border_container"
        android:padding="25dp">

        <ImageView
            android:id="@+id/forgot_password_logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="4dp"
            android:src="@drawable/forgot_password_logo"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/forgot_password_text_capt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_logo"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Forgot Your Password?"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/forgot_password_edit_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/forgot_password_text_capt"
            android:layout_margin="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_border_edittext"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"
            android:inputType="text"
            android:hint="    Email"
            android:drawableRight="@drawable/mail"/>

        <Button
            android:id="@+id/forgot_password_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@id/forgot_password_edit_email"
            android:paddingLeft="12dp"
            android:paddingRight="30dp"
            android:background="@drawable/rounded_border_button_blue"
            android:text="Send to Mail"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:drawableLeft="@drawable/gmail"/>

        <Button
            android:id="@+id/forgot_password_button_backToLogin"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@id/forgot_password_button_confirm"
            android:background="@drawable/rounded_border_button_red"
            android:text="Back to Sign In"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:gravity="center" />

    </RelativeLayout>
</LinearLayout>