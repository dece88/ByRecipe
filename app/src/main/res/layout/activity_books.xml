<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Activity.BooksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/navigationBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_toRightOf="@id/welcome"
                android:layout_marginTop="16dp"
                android:contentDescription="Navigation Bar"
                android:src="@drawable/ic_navigation_bar_white" />

            <TextView
                android:id="@+id/welcome"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="WELCOME"
                android:textSize="32dp"
                android:textColor="#FFF"/>

            <TextView
                android:id="@+id/buku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/welcome"
                android:text="Books"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="32sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280sp"
            android:background="@drawable/alacarte"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/alacarteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ala Carte"
                android:background="@drawable/rounded_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280sp"
            android:background="@drawable/bakery"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/bakeryBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bakery"
                android:background="@drawable/rounded_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280sp"
            android:background="@drawable/steak"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/steakBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steak"
                android:background="@drawable/rounded_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>